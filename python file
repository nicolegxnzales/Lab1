# Lab1.py

def main ():

    #input from user
    roomlength = float(input("Room Length: "))
    roomwidth = float(input(" Room Width: "))
    cost_per_sq_ft = float(input("Cost per sq. foot: "))

    #calculations
    squarefeet = roomlength * roomwidth
    flooringcost = squarefeet * cost_per_sq_ft
    tax = flooringcost * 0.07
    totalamount = flooringcost + tax

    #output the results
    print(f" Square feet: {squarefeet}")
    print(f" Flooring Cost: {flooringcost}")
    print(f" Tax: {tax}")
    print(f" Total Amount: {totalamount}")

    #entry point for the program

if __name__ == "__main__":
    main()
